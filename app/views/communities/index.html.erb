<div class="container">
  <div class="profile">
    <div>
      <div>
        <h1>-Time Line-</h1>
         <%= form_with model: @community, local: true do |f| %>
        <div>
          <%= f.text_field :content, size: "50" %>
          <%= f.submit "Create" %>
        </div>
      <% end %>
        <% @communities.each do |community| %>
          <div class='sendr'>
            <%#= community.user.name %>
            <%= community.content %>
          </div>
          <% if community.user.id === current_user.id %>
            <%= link_to "Delete",community_path(community), method: :delete, class: "sendr__delete" %>
          <% end %>
        <% end %>
      </div>
    </div>    
  </div>
</div>